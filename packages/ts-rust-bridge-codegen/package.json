{
  "name": "ts-rust-bridge-codegen",
  "version": "0.5.0",
  "description": "A toolset to build efficient communication between rust and typescript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/twop/ts-rust-bridge.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*.*",
            "examples/**/*.*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "scripts": {
    "build": "pack build",
    "gen:example-code": "ts-node -r esm examples/genBasic.ts",
    "run:example": "ts-node -r esm examples/runExample.ts",
    "gen:test-code": "ts-node -r esm __tests__/genTypesForTests.ts",
    "test": "jest",
    "benchmark": "node -r esm -r ts-node/register examples/benchmark.ts "
  },
  "dependencies": {
    "ts-union": "^2.1.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@pika/pack": "^0.3.4",
    "@pika/plugin-build-node": "^0.3.14",
    "@pika/plugin-build-web": "^0.3.14",
    "@pika/plugin-ts-standard-pkg": "^0.3.14",
    "@types/node": "^11.9.3",
    "@types/prettier": "^1.16.1",
    "esm": "3.1.3",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1",
    "jest": "^24.7.1",
    "@types/jest": "^24.0.11",
    "ts-jest": "^24.0.2"
  }
}
