{
  "name": "ts-rust-bridge-codegen",
  "version": "0.6.0",
  "description": "A toolset to build efficient communication between rust and typescript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/twop/ts-rust-bridge.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "./tsconfig.build.json",
          "exclude": [
            "__tests__/**/*.*",
            "examples/**/*.*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "scripts": {
    "build": "pack build",
    "gen:example-code": "ts-node -r esm examples/genBasic.ts",
    "run:example": "ts-node -r esm examples/runExample.ts",
    "gen:test-code": "ts-node -r esm __tests__/genTypesForTests.ts",
    "test": "jest",
    "benchmark": "node -r esm -r ts-node/register examples/benchmark.ts"
  },
  "dependencies": {
    "ts-union": "^2.1.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-ts-standard-pkg": "^0.4.0",
    "@types/node": "^12.0.4",
    "@types/prettier": "^1.16.1",
    "ts-binary": "^0.5.0",
    "esm": "3.1.3",
    "prettier": "^1.17.1",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1",
    "jest": "^24.8.0",
    "@types/jest": "^24.0.13",
    "ts-jest": "^24.0.2"
  }
}
